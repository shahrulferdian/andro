<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".absen" >

    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="297dp"
            android:text="Tanggal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTanggal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="296dp"
            android:layout_marginBottom="64dp"
            android:text="Nama"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTanggal"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/tanggal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:hint="Masukkan Tanggal"
            android:inputType="textPersonName"
            android:onClick="etTanggal" />

        <EditText
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="19dp"
            android:ems="10"
            android:hint="Masukkan Nama"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/absensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="283dp"
            android:text="Absensi"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/hadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absensi"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:text="Hadir"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/sakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absensi"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/hadir"
            android:text="Sakit"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/izin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absensi"
            android:layout_marginStart="35dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/sakit"
            android:text="Izin" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sakit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="138dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="148dp"
            android:background="@color/design_default_color_primary"
            android:text="Submit" />

    </RelativeLayout>
    >

</androidx.constraintlayout.widget.ConstraintLayout>